{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run development server",
            "type": "shell",
            "command": "pnpm run dev",
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build project",
            "type": "shell",
            "command": "pnpm run build",
            "group": "build",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "Start production server",
            "type": "shell",
            "command": "pnpm run start",
            "isBackground": true,
            "group": "none"
        },
        {
            "label": "Lint project",
            "type": "shell",
            "command": "pnpm run lint",
            "group": "test",
            "problemMatcher": []
        }
    ]
}
